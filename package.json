{
  "name": "portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio monorepo: Next.js frontend (apps/web) + CMS API (apps/api) + CMS Admin (apps/admin)",
  "author": "Schalk Griebenow",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:web": "npm run dev --workspace=web",
    "dev:api": "npm run dev --workspace=api",
    "dev:cms": "npm run dev --workspace=cms",
    "build": "npm run build --workspace=web",
    "build:web": "npm run build --workspace=web",
    "build:api": "npm run build --workspace=api",
    "build:cms": "npm run build --workspace=cms",
    "start": "npm run start --workspace=web",
    "start:web": "npm run start --workspace=web",
    "start:api": "npm run start --workspace=api",
    "seed:api": "npm run seed --workspace=api",
    "lint": "npm run lint --workspace=web",
    "lint:web": "npm run lint --workspace=web",
    "test": "npm run test --workspace=web",
    "test:web": "npm run test --workspace=web",
    "coverage": "npm run coverage --workspace=web",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "lint-staged": {
    "apps/**/**/*.{js,jsx,ts,tsx,css,md,mdx,json,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
